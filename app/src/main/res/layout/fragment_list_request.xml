<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.taxicabdriver.FragmentListRequest"
    android:orientation="vertical"
    android:background="@color/colorPagebg">
	
    <RelativeLayout
        android:id="@+id/lt_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="gone">
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Offline"
            android:padding="10dp"
            android:background="#ffecf0"
            android:textColor="#dd2a2a"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car_with_signal"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="You are offline"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#dd2a2a"/>
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Go Online to receive request !"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_changestatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:text="Go Online"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ride updates"
            android:textColor="@color/colorLabel"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listreq"
            android:divider="@color/colorPagebg"
            android:dividerHeight="8dp"
            android:scrollbars="none"/>
    </LinearLayout>
</LinearLayout>
